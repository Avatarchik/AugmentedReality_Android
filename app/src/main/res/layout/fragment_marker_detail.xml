<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:context="com.freedom.augmentedreality.fragments.MarkerDetailFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_row_selector"
        android:padding="10dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image_marker"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_marker"
            android:text="Name"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_marker"
            android:layout_toRightOf="@+id/image_marker"
            android:textColor="@color/genre"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_create_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="created at"
            android:textSize="12dp"
            android:layout_below="@+id/user_name"
            android:layout_toRightOf="@+id/image_marker"
            android:layout_toEndOf="@+id/image_marker" />

        <TextView
            android:id="@+id/txt_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_download"
            android:text="@string/hello_blank_fragment" />

        <Button
            android:id="@+id/btn_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_marker"
            android:text="Download marker" />


    </RelativeLayout>
</LinearLayout>